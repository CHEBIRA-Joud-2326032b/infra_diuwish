apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend-app
  namespace: default
  labels:
    app: diuwish-frontend
spec:
  replicas: 2
  selector:
    matchLabels:
      app: diuwish-frontend
  template:
    metadata:
      labels:
        app: diuwish-frontend
    spec:
      containers:
      - name: frontend
        image: diuwish/frontend:latest # Image construite via CI/CD
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 3000
        env:
        # L'URL de l'API Backend accessible depuis le navigateur du client
        - name: NEXT_PUBLIC_API_URL
          value: "http://api.diuwish.internal"
        livenessProbe:
          httpGet:
            path: /
            port: 3000
          initialDelaySeconds: 15
          periodSeconds: 20
---
apiVersion: v1
kind: Service
metadata:
  name: frontend-service
  namespace: default
spec:
  selector:
    app: diuwish-frontend
  ports:
  - protocol: TCP
    port: 80
    targetPort: 3000
  type: ClusterIP
